<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HackatonProject.Views.RequestDetail">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label x:Name="MyItemNameShow" Margin ="1" Padding="5" HorizontalTextAlignment="Center"/>
            <Label x:Name="MyIngrediantItemShow" Margin="5,5" FontSize="Medium" TextColor="Black"/>
            <Image x:Name="MyImageCall" HeightRequest="256" WidthRequest="256"/>
            <Label x:Name="CommentTitle" Margin="5" FontSize="Small"/>
            <Label x:Name="CommentDetail" Margin="5" FontSize="Medium" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>